{% extends 'layout.html.twig' %}

{% block title %}Supprimer un contact ?{{ parent() }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1>Supprimer un contact</h1>
            <p>
                Etes-vous certain de vouloir supprimer le contact "{{ contact.firstname }} {{ contact.lastname }}" ?
            </p>
            <form action="{{ path('contact_delete', {'id': contact.id}) }}" method="post">
                <a href="{{ path('contact_listing') }}" class="btn btn-default">Annuler</a>
                <input type="submit" value="Supprimer" class="btn btn-primary">
                {{ form_rest(form) }}
            </form>
        </div>
    </div>
{% endblock %}