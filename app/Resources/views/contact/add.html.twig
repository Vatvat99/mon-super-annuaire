{% extends 'layout.html.twig' %}

{% block title %}Nouveau contact{{ parent() }}{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1>Nouveau contact</h1>
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="form-group">
                {{ form_label(form.firstname, 'Prénom : *') }}
                {{ form_widget(form.firstname) }}
                {{ form_errors(form.firstname) }}
            </div>
            <div class="form-group">
                {{ form_label(form.lastname, 'Nom : *') }}
                {{ form_widget(form.lastname) }}
                {{ form_errors(form.lastname) }}
            </div>
            <div class="form-group">
                {{ form_label(form.phone, 'Téléphone fixe : *') }}
                {{ form_widget(form.phone) }}
                {{ form_errors(form.phone) }}
            </div>
            <div class="form-group">
                {{ form_label(form.mobilePhone, 'Téléphone mobile : *') }}
                {{ form_widget(form.mobilePhone) }}
                {{ form_errors(form.mobilePhone) }}
            </div>
            <div class="form-group">
                {{ form_label(form.county, 'Département : *') }}
                {{ form_widget(form.county) }}
                {{ form_errors(form.county) }}
            </div>
            <p>* Champs obligatoires</p>
            <p class="text-right">
                <a href="{{ path('contact_listing') }}" class="btn btn-default">Annuler</a>
                <button type="submit" class="btn btn-primary">Valider</button>
            </p>
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}
